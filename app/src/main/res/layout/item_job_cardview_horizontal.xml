 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:card_view="http://schemas.android.com/apk/res-auto"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:clickable="true"
     android:id="@+id/job_card"
     android:focusable="true"
     android:background="?attr/selectableItemBackground">

     <ImageView
         android:id="@+id/employer_logo"
         android:layout_width="@dimen/emp_logo_width"
         android:layout_height="@dimen/emp_logo_height"
         android:layout_margin="16dp"
         android:background="@drawable/emp_image"
         android:contentDescription="@string/employer_logo"
         android:scaleType="fitCenter" />

     <RelativeLayout
         android:id="@+id/card_title"
         android:layout_toEndOf="@id/employer_logo"
         android:layout_width="match_parent"
         android:layout_height="80dp"
         android:layout_marginEnd="16dp"
         android:layout_marginBottom="16dp"
         android:layout_marginStart="0dp"
         android:layout_marginTop="16dp">

         <TextView
             android:id="@+id/jobTitle"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="8dp"
             android:fontFamily="@font/kanit"
             android:singleLine="true"
             android:text=""
             android:textColor="@color/black"
             android:textSize="14sp"
             android:textStyle="bold" />

         <RelativeLayout
             android:id="@+id/empDetail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/jobTitle">

             <TextView
                 android:id="@+id/empIcon"
                 android:layout_width="16dp"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:fontFamily="@font/font_awesome"
                 android:text="@string/fa_building"
                 android:textAlignment="center"
                 android:textColor="@color/colorPrimary" />

             <TextView
                 android:id="@+id/empName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:layout_toEndOf="@id/empIcon"
                 android:fontFamily="@font/kanit"
                 android:singleLine="true"
                 android:text=""
                 android:textSize="12sp" />

         </RelativeLayout>

         <RelativeLayout
             android:id="@+id/locationDetail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/empDetail">

             <TextView
                 android:id="@+id/locationIcon"
                 android:layout_width="16dp"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:fontFamily="@font/font_awesome"
                 android:text="@string/fa_map_marker"
                 android:textAlignment="center"
                 android:textColor="@color/colorPrimary" />

             <TextView
                 android:id="@+id/locationName"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:layout_toEndOf="@id/locationIcon"
                 android:fontFamily="@font/kanit"
                 android:singleLine="true"
                 android:text=""
                 android:textSize="12sp" />

         </RelativeLayout>

         <RelativeLayout
             android:id="@+id/otherDetail"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_below="@id/locationDetail">

             <TextView
                 android:id="@+id/moneyIcon"
                 android:layout_width="16dp"
                 android:layout_height="wrap_content"
                 android:layout_centerVertical="true"
                 android:fontFamily="@font/font_awesome"
                 android:text="@string/fa_money"
                 android:textAlignment="center"
                 android:textColor="@color/colorPrimary" />

             <TextView
                 android:id="@+id/moneyText"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="8dp"
                 android:layout_toEndOf="@id/moneyIcon"
                 android:fontFamily="@font/kanit"
                 android:singleLine="true"
                 android:text=""
                 android:textSize="12sp" />

         </RelativeLayout>

     </RelativeLayout>

